<!DOCTYPE html>
<html>
    {% include "partials/stylists_header.html" %}
    <body>
        <div class="container">
            <h1>{{ stylist.getStylistName }}</h1>
            <div clas="row">
                <div class="col-md-6">
                    <h3>Clients:</h3>

                    {% if clients is not empty %}
                        <ul class="list-group">
                            {% for client in clients %}
                                <li class="list-group-item">
                                    {{ client.getClientName }}
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <ul class="list-group">
                            <li class="list-group-item">
                                <em>{{ stylist.getStylistName }} currently has no clients</em>
                            </li>
                        </ul>
                    {% endif %}
                </div>

                <div class="col-md-6">
                    <h3>Add New Client (optional)</h3>
                    <form action="/add_client_to_stylist" method="post">
                        <div class="form-group">
                            <input id="stylist_id" name="stylist_id" class="form-control" type="hidden" value="{{ stylist.getId() }}">
                            <label for="input-client-name">Name:</label>
                            <input id="input-client-name" name="input-client-name" class="form-control" type="text" placeholder="Enter name" required>
                        </div>
                        <button type="submit" class="btn btn-success">Add</button>
                    </form>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <form action="/">
                            <button type="submit" class="btn btn-default"><< Go Back</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
