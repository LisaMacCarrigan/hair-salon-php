<!DOCTYPE html>
<html>
    {% include "partials/clients_header.html" %}
    <body>
        <div class="container">
            <h1 id="brand">Clients</h1>
            <div class="row">
                <div class="col-md-6">
                    <h3>All Clients</h3>
                    {% if clients is not empty %}
                        <ul class="list-group">
                            {% for client in clients %}
                                <li class="list-group-item">
                                    <a href="/clients/{{ client.getId }}"> {{ client.getClientName }} </a></li>
                            {% endfor %}
                        </ul>
                        <form action='/delete_clients' method='post'>
                            <button class="btn btn-danger" type='submit'>Delete All</button>
                        </form>
                    {% else %}
                    <p><em>There are currently no clients</em></p>
                    {% endif %}
                </div>
                <div class="col-md-6">
                    {% if stylists is not empty %}
                        <h3>Add New Client</h3>
                        <form action="/add_client" method="post">
                            <div class="form-group">
                                <input id="input-client-name" name="input-client-name" class="form-control" type="text" placeholder="Enter name" required>
                                <h3>Assign Stylist</h3>

                                <select id="stylist_id" name="stylist_id" class="form-control" type="text">
                                    {% for stylist in stylists %}
                                        <option value="{{ stylist.getId }}">{{ stylist.getStylistName }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <button type="submit" class="btn btn-success">Add</button>
                        </form>
                    {% else %}
                    <div>
                        <h3>Note:</h3>
                        <p><em>A client cannot be added until there is a stylist.</em></p><strong><a href="/stylists">Add Stylist Now</strong></a>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="container home-link">
            <div class="row">
                <div class="col-md-12">``
                    <form action="/">
                        <button type="submit" class="btn btn-default"><< Go Back</button>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>
